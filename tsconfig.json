{
  "compilerOptions": {
    "rootDir": "./src",
    "declaration": true,
    "target": "ES5",
    "moduleResolution": "node",
    "outDir": "./lib",
    "module": "CommonJS",
    "strict": true,
    "resolveJsonModule": true,
    "noImplicitAny": true
  },
  "exclude": [
    "tests",
    "lib",
    "node_modules"
  ],
  "include": [
    "./src/*.ts"
  ]
}